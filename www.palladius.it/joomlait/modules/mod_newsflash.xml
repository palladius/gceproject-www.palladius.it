<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall type="module" version="1.0.0">
	<name>Newsflash</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>Il modulo notizie flash seleziona a caso una notizia da mostrare ogni volta che si carica la pagina dove il modulo risiede.  Può inoltre visualizzare più di un articolo in visuale orizzontale o verticale.</description>
	<files>
		<filename module="mod_newsflash">mod_newsflash.php</filename>
	</files>
	<params>
		<param name="catid" type="mos_category" default="0" label="Categoria" description="Una categoria contenuti" />
		<param name="style" type="list" default="random" label="Style" description="Stile da mostrare">
		    <option value="random">Scelta random</option>
		    <option value="horiz">Orizzontale</option>
		    <option value="vert">Verticale</option>
		</param>
		<param name="image" type="radio" default="0" label="Mostro immagini" description="Mostra immagini contenuti">
			<option value="1">Si</option>
			<option value="0">No</option>
		</param>
		<param name="link_titles" type="list" default="" label="Titoli ipertestuali" description="Rendi titolo collegamento ipertesto">
			<option value="">Uso Globali</option>
			<option value="0">No</option>
			<option value="1">Si</option>
		</param>
        <param name="readmore" type="radio" default="0" label="Leggi tutto" description="Mostra/nascondi il bottone leggi tutto">
            <option value="0">Nascondi</option>
            <option value="1">Mostra</option>
        </param>
        <param name="item_title" type="list" default="0" label="Titolo oggetto" description="Mostra titolo articolo">
                <option value="0">No</option>
                <option value="1">Si</option>
        </param>
		<param name="items" type="text" default="" label="N. di articoli" description="N. di articoli da mostrare" />
		<param name="cache" type="radio" default="0" label="Abilita Chace" description="selezionare abilitazione cache o meno">
			<option value="0">No</option>
			<option value="1">Si</option>
		</param>
		<param name="moduleclass_sfx" type="text" default="" label="Suffisso class CSS modulo" description="Un suffisso applicato alla class CSS del modulo (table.moduletable), permette di avere stili individuali" />
	</params>
</mosinstall>
