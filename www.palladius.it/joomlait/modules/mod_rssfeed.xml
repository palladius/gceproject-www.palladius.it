<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall type="module" version="1.0.0">
	<name>Syndicate</name>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>Attraverso il modulo le pesrone possono utilizzare le notizie del vostro sito. Quando clicchiamo sulla icona, verremo reindirizzati in una nuova pagina con la lista delle nostre ultime notizie in formato XML. Per utilizzare questi come Newsfeed in altri siti Joomla! o con reader Newsfeed, si deve copiare ed incollare la URL.</description>
	<files>
		<filename module="mod_rssfeed">mod_rssfeed.php</filename>
	</files>
	<params>
		<param name="text" type="text" default="" label="Testo" description="Inserire il testo che viene mostrato insieme ai collegamenti RSS" />
		<param name="cache" type="radio" default="0" label="Abilita Cache" description="Abilita Cache">
			<option value="0">No</option>
			<option value="1">Si</option>
		</param>
	        <param name="moduleclass_sfx" type="text" default="" label="Suffiso class CSS modulo" description="Un suffisso alla classe CSS può essere applicato al modulo (table.moduletable), questo garantisce uno stile individuale al modulo pagina" />
		<param name="rss091" type="radio" default="1" label="RSS 0.91" description="Mostra/Nascondi RSS 0.91 Link">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="rss10" type="radio" default="1" label="RSS 1.0" description="Mostra/Nascondi RSS 1.0 Link">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="rss20" type="radio" default="1" label="RSS 2.0" description="Mostra/Nascondi RSS 2.0 Link">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="atom" type="radio" default="1" label="Atom" description="Mostra/Nascondi Atom 0.3 Link">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="opml" type="radio" default="1" label="OPML" description="Mostra/Nascondi OPML Link">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="rss091_image" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Immagine RSS 0.91" description="Scegli immagine da utilizzare" />
		<param name="rss10_image" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Immagine RSS 1.0 " description="Scegli immagine da utilizzare" />
		<param name="rss20_image" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Immagine RSS 2.0 " description="Scegli immagine da utilizzare" />
		<param name="atom_image" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Immagine Atom " description="Scegli immagine da utilizzare" />
		<param name="opml_image" type="imagelist" directory="/images/M_images" hide_none="1" default="" label="Immagine OPML " description="Scegli immagine da utilizzare" />
	</params>
</mosinstall>
