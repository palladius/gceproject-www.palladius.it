<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall type="component" version="1.0.0">
	<name>Syndicate</name>
	<author>Joomla! Project</author>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>Questo componente controlla la configurazione Syndication</description>
	<params>
		<param name="check" type="radio" default="1" label="Controllo sicurezza" description="Se abilitato con la funzione syndication funziona solo se il modulo mod_rssfeed è pubblicato">
			<option value="0">No</option>
			<option value="1">Si</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="cache" type="radio" default="1" label="Cache" description="Cache per i files feed">
			<option value="0">No</option>
			<option value="1">Si</option>
		</param>
		<param name="cache_time" type="text" size="8" default="3600" label="Durata cache" description="La cache esegue un refresh ogni x secondi" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="count" type="text" size="4" default="5" label="# articoli" description="Numero di articoli da visualizzare" />
		<param name="title" type="text" size="40" default="Powered by Mambo 4.5.2" label="Titolo" description="Titolo Syndication" />
		<param name="description" type="textarea" rows="5" cols="30" default="Mambo site syndication" label="Descrizione" description="Descrizione Syndication" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="image_file" type="imagelist" directory="/images/M_images" default="" label="Immagine" description="Image inclusa nel feed" />
		<param name="image_alt" type="text" size="30" default="Powered by Mambo 4.5.2" label="Image Alt" description="Alt text per immagine" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="limit_text" type="radio" default="1" label="Limita testo" description="Limite del testo degli articoli con il valore indicato">
			<option value="0">No</option>
			<option value="1">Si</option>
		</param>
		<param name="text_length" type="text" size="4" default="20" label="Lunghezza testo" description="Il numero di parole per gli articoli - 0 vuol dire nessun testo" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="rss091" type="radio" default="1" label="RSS 0.91" description="Abilita/Disabilita RSS 0.91 feed">
			<option value="0">Disabilita</option>
			<option value="1">Abilita</option>
		</param>
		<param name="rss10" type="radio" default="1" label="RSS 1.0" description="Abilita/Disabilita RSS 1.0 feed">
			<option value="0">Disabilita</option>
			<option value="1">Abilita</option>
		</param>
		<param name="rss20" type="radio" default="1" label="RSS 2.0" description="Abilita/Disabilita RSS 2.0 feed">
			<option value="0">Disabilita</option>
			<option value="1">Abilita</option>
		</param>
		<param name="atom03" type="radio" default="1" label="ATOM 0.3" description="Abilita/Disabilita ATOM 0.3 feed">
			<option value="0">Disabilita</option>
			<option value="1">Abilita</option>
		</param>
		<param name="opml" type="radio" default="1" label="OPML" description="Abilita/Disabilita OPML feed">
			<option value="0">Disabilita</option>
			<option value="1">Abilita</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="orderby" type="list" default="front" label="Ordine" description="Ordine di apparizione degli articoli">
			<option value="front">Predefinito</option>
			<option value="front">Ordine prima pagina</option>
			<option value="date">Vecchi prima</option>
			<option value="rdate">Nuovi prima</option>
			<option value="alpha">Titolo alfabetico</option>
			<option value="ralpha">Titolo alfabetico al contrario</option>
			<option value="author">Autore alfabetico</option>
			<option value="rauthor">Autore alfabetico al contrario</option>
			<option value="hits">I più letti</option>
			<option value="rhits">I meno letti</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="live_bookmark" type="list" default="0" label="Live Bookmarks" description="Attiva supporto per funzioni di Firefox Live Bookmarks">
			<option value="0">Off</option>
			<option value="RSS0.91">RSS 0.91</option>
			<option value="RSS1.0">RSS 1.0</option>
			<option value="RSS2.0">RSS 2.0</option>
			<option value="ATOM0.3">ATOM 0.3</option>
		</param>
	</params>
</mosinstall>
