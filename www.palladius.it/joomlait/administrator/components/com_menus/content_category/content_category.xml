<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall type="menu" version="1.0.0">
	<name>Tabella - Contenuto Categoria</name>
	<group>Content</group>
	<author>Joomla! Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>(C) 2005 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>Mostra  la lista dei contenuti di una categoria</description>
	<params>
		<param name="menu_image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Immagine Menu" description="Una piccola immagine viene collocata a destra o sinistra degli oggetti menu, le immagini devono risiedere nella cartella images/stories/" />
		<param name="page_title" type="radio" default="1" label="Titolo Pagina" description="Mostra/Nascondi Titolo Pagina">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="pageclass_sfx" type="text" default="" label="Suffisso class css pagina" description="Un suffisso da applicare alla class CSS della pagina, questo per avere uno stile individuale per la pagina" />
		<param name="back_button" type="list" default="" label="Bottone indietro" description="Mostra/Nascondi il bottone indietro, questo riporta alla pagina precedentemente visitata">
			<option value="">Usa Globali</option>
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="description_cat" type="radio" default="1" label="Descrizione categoria" description="Mostra/Nascondi la descrizione categoria">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="description_cat_image" type="radio" default="1" label="Immagine descrizione categoria" description="Mostra/Nascondi immagine descrizione categoria">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="orderby" type="list" default="" label="Ordinamento per" description="Genera gli ordinamenti di uscita degli articoli.">
			<option value="">Predefinito</option>
			<option value="date">I vecchi prima</option>
			<option value="rdate">Prima i più recenti</option>
			<option value="alpha">Titoli in ordine alfabetico A-Z</option>
			<option value="ralpha">Titoli in ordine alfabetico al contrario Z-A</option>
			<option value="author">Autore in ordine alfabetico A-Z</option>
			<option value="rauthor">Autore in ordine alfabetico al contrario Z-A</option>
			<option value="hits">Più letti</option>
			<option value="rhits">Meno letti</option>
			<option value="order">Ordinamento</option>
		</param>
		<param name="date_format" type="text" size="15" default="" label="Formato Data" description="Quale formato data mostrare, usa il comando PHPs strftime  - se lasciato in bianco utilizza quello che si trova nel tuo file lingua" />
		<param name="date" type="list" default="" label="Colonna Data" description="Mostra/Nascondi colonna data">
			<option value="">Usa Globali</option>
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="author" type="list" default="" label="Colonna Autore" description="Mostra/Nascondi colonna Autore">
			<option value="">Usa Globali</option>
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="hits" type="list" default="" label="Colonna Visite" description="Mostra/Nascondi colonna Visite">
			<option value="">Usa Globali</option>
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="headings" type="radio" default="1" label="Intestazione" description="Mostra/Nascondi the intestazione">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="navigation" type="radio" default="1" label="Barra navigazione" description="Mostra/Nascondi Barra navigazione">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="order_select" type="radio" default="1" label="Seleziona ordinamento" description="Mostra/Nascondi Ordinamento del selettore dropdown">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="display" type="radio" default="1" label="Mostra selezione" description="Mostra/Nascondi seleziona con  dropdown">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="display_num" type="list" default="50" label="Mostra" description="Scelta numero di articoli da mostrare come predefinito">
			<option value="5">5</option>
			<option value="10">10</option>
			<option value="15">15</option>
			<option value="20">20</option>
			<option value="25">25</option>
			<option value="30">30</option>
			<option value="50">50</option>
		</param>
		<param name="filter" type="radio" default="1" label="Filtri" description="Mostra/Nascondi applica filtri">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="filter_type" type="list" default="title" label="Campo Filtri" description="A quale campo vuoi applicare i filtri">
			<option value="title">Titolo</option>
			<option value="author">Autore</option>
			<option value="hits">Visite</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="other_cat" type="radio" default="1" label="Altre Categorie" description="Mostra/Nascondi la lista delle categorie">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="empty_cat" type="radio" default="0" label="Categorie Vuote" description="Mostra/Nascondi vuota(nessun articolo) nella categoria">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="cat_items" type="radio" default="1" label="# Articoli Categoria" description="Mostra/Nascondi numero di articoli in ogni categoria">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="cat_description" type="radio" default="1" label="Descrizione Categoria" description="Mostra/Nascondi Descrizione Categoria, appare sotto il nome della categoria">
			<option value="0">Nascondi</option>
			<option value="1">Mostra</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
 		<param name="unpublished" type="radio" default="0" label="Elementi non pubblicati" description="Mostra/Nascondi elementi non pubblicati per utenti del gruppo `Publisher` e superiori">
 			<option value="0">Nascondi</option>
 			<option value="1">Mostra</option>
		</param>
	</params>
</mosinstall>
